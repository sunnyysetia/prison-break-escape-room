            <Font size="18.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="twoMinButton" layoutX="149.0" layoutY="331.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="73.0" selected="true" text="2:00" toggleGroup="$tgTime">
         <font>
            <Font size="18.0" />
         </font>
      </RadioButton>
