<Pane fx:id="waitingLobby" prefHeight="470.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.WaitingLobbyController">
    <children>
        <Label layoutX="36.0" layoutY="24.0" prefHeight="41.0" prefWidth="531.0" text="SOFTENG 206 - ESCAPE ROOM">
            <font>
                <Font name="Arial" size="35.0" />
            </font>
        </Label>
        <Label layoutX="190.0" layoutY="76.0" text="Enter Your Name:">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="nameField" alignment="CENTER" layoutX="209.0" layoutY="128.0" prefHeight="45.0" prefWidth="184.0" promptText="Your Name">
         <font>
            <Font size="24.0" />
         </font></TextField>
        
        <Label layoutX="194.0" layoutY="189.0" text="Select Difficulty:">
            <font>
                <Font size="30.0" />
            </font>
        </Label> 
        
