            <Font size="18.0" />
         </font>
      </RadioButton>
        <RadioButton fx:id="easyButton" layoutX="143.0" layoutY="241.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="73.0" selected="true" text="Easy" toggleGroup="$tgDifficulty">
