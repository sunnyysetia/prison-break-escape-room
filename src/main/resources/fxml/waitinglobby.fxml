            <Font size="18.0" />
         </font></RadioButton>
      <Label layoutX="221.0" layoutY="278.0" text="Select Time:">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <RadioButton fx:id="sixMinButton" layoutX="379.0" layoutY="331.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="73.0" selected="true" text="6:00">
